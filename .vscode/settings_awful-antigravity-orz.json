{
  "window.title": "[B] ${activeEditorShort}${separator}${rootName}${separator}${appName}",
  "workbench.colorTheme": "Dark Modern",
  "workbench.colorCustomizations": {
    // global
    "foreground": "#ffe6e6",
    "icon.foreground": "#ffe6e6",
    // base reds
    "titleBar.activeBackground": "#960000",
    "titleBar.inactiveBackground": "#4d0000",
    "activityBar.background": "#7a0000",
    "sideBar.background": "#3d0000",
    "editor.background": "#1a0000",
    "panel.background": "#260000",
    "statusBar.background": "#960000",
    "tab.activeBackground": "#5e0000",
    "tab.inactiveBackground": "#2e0000",
    // must-have foregrounds (ここが効く)
    "titleBar.activeForeground": "#ffe6e6",
    "titleBar.inactiveForeground": "#d9a7a7",
    "activityBar.foreground": "#ffffff",
    "activityBar.inactiveForeground": "#d9a7a7",
    "activityBarBadge.background": "#ffe6e6",
    "activityBarBadge.foreground": "#260000",
    "sideBar.foreground": "#ffe6e6",
    "sideBarTitle.foreground": "#ffffff",
    "sideBarSectionHeader.foreground": "#ffffff",
    "panelTitle.activeForeground": "#ffffff",
    "panelTitle.inactiveForeground": "#d9a7a7",
    "statusBar.foreground": "#ffffff",
    "statusBarItem.foreground": "#ffffff",
    "statusBarItem.hoverForeground": "#ffffff",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveForeground": "#ffe6e6",
    "list.foreground": "#ffe6e6",
    "editor.foreground": "#ffecec",
    // borders (white)
    "titleBar.border": "#ffffff",
    "statusBar.border": "#ffffff",
    "activityBar.border": "#ffffff",
    "sideBar.border": "#ffffff",
    "panel.border": "#ffffff",
    "sash.hoverBorder": "#ffffff",
    // “淡い残党”をグローバル寄りに潰す（WebView + tooltip）
    "webview.background": "#1a0000",
    "tooltip.background": "#1a0000",
    // ① センター上部タブ右端のアイコン帯が明るすぎる → 暗く＆アイコン少し落とす
    "editorGroupHeader.tabsBackground": "#260000",
    "actionBar.foreground": "#d9a7a7",
    "actionBar.hoverForeground": "#ffe6e6",
    "actionBar.hoverBackground": "#3a0000",
    // ② 選択中（Explorer/テキスト）が明るすぎる → 選択背景を暗赤に固定
    "list.activeSelectionBackground": "#3a0000",
    "list.inactiveSelectionBackground": "#2a0000",
    "list.focusBackground": "#3a0000",
    "editor.selectionBackground": "#520000",
    "editor.inactiveSelectionBackground": "#3a0000"
  }
}